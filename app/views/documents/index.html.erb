<h3 class="bd-title text-center"><%= @category.name %></h3>

<div id="accordion" role="tablist">
<% @documents.each do |document| %>
<div class="card">
  <div class="card-header" role="tab" id="heading_<%= document.id %>">
    <h5 class="mb-0">
      <a data-toggle="collapse" href="#collapse_<%= document.id %>"
        aria-expanded="true" aria-controls="collapse_<%= document.id %>">
        <%= document.title %>
      </a>
    </h5>
  </div>

  <div id="collapse_<%= document.id %>" class="collapse" role="tabpanel"
    aria-labelledby="heading_<%= document.id %>" data-parent="#accordion">
    <div class="card-body">
      <%= raw document.description %>
      <% if document && document.doc_file_url %>
      <div class="text-center">
        <%= link_to document.title, category_document_path(@category, document) %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>

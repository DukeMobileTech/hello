<% @categories.each_slice(3) do |categories| %>
<div class="row">
  <% categories.each do |category| %>
  <div class="col-sm-4">
    <h2 class="text-center">
      <%= category.name %>
    </h2>
    <%= link_to (image_tag category.pictogram.url(:medium), class: 'img-responsive, img-thumbnail'), category_posts_path(category.id) %>
  </div>
  <% end %>
</div>
<% end %>
<% @categories.each_slice(3) do |categories| %>
<div class="row">
  <% categories.each do |category| %>
  <% cache category do %>
  <div class="col-xs-12 col-md-4">
    <% if category.pictogram_url(:medium) %>
    <%= link_to (image_tag category.pictogram_url(:medium),
    class: 'img-fluid h-75 w-100'), category_posts_path(category.id) %>
    <% end %>
    <div class="text-center mb-3">
      <%= link_to category.name, category_posts_path(category.id), class: "text-black" %>
    </div>
  </div>
  <% end %>
  <% end %>
</div>
<% end %>
